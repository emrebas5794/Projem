<div class="row">
    <div class="col-md-6 col-sm-8">

        @*<form action="/Admin/Category/Create" method="post">

            </form>*@


        @using (Html.BeginForm())
        {
            <div class="form-group">

                @Html.LabelFor(m => m.Name)

