@model CafeBlog.DTO.CategoryDTO

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Kategori <small>/ Sil</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="/Admin">Giriş</a>
            </li>
            <li class="active">
                <i class="fa fa-table"></i> Kategoriler
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-md-6 col-sm-8">

        <div class="alert alert-danger">
            Bu kategoriyi silmek istediğinize emin misiniz?
            @*@Model.Name isimli kategoriyi silmek üzeresiniz. Onay veriyor musunuz?*@
        </div>

    </div>
</div>

<div class="row">
    <div class="col-md-6 col-sm-8">

        @using (Html.BeginForm())
        {

            @Html.HiddenFor(m => m.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.Name)

                <p>
                    @Html.DisplayFor(m => m.Name)
                </p>
            </div>

            <div class="form-group">

                <div class="pull-right">
                    <button type="submit" class="btn btn-warning">
                        Silmeyi Onayla
                    </button>
                    @Html.ActionLink("İptal", "Index", new { controller = "Category" }, new { @class = "btn btn-default" })
                </div>


            </div>
        }

    </div>
</div>