@model List<MVC_SimpleBlog.DTO.PostDTO>

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Yazılar
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="/Admin">Anasayfa</a>
                </li>
                <li class="active">
                    <i class="fa fa-table"></i> Yazılar
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-6">
            @Html.ActionLink("Yeni ekle", "Create")
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (MVC_SimpleBlog.DTO.PostDTO post in Model)
                        {
                            <tr>
                                <td>@post.Id</td>
                                <td>@post.Title</td>
                                <td>@post.CreatedDate.ToShortDateString()</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = post.Id })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>