<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/eksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/yemekismi"
        android:layout_alignParentTop="true"
        android:src="@drawable/eksi" />

    <TextView
        android:id="@+id/yemekismi"
        android:layout_width="50dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/adet"
        android:layout_toRightOf="@+id/eksi"
        android:gravity="center_vertical"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/arti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/siparisyemekfiyati"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/yemeklistefiyat"
        android:src="@drawable/arti" />

    <TextView
        android:id="@+id/siparisyemekfiyati"
        android:layout_width="50dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/arti"
        android:gravity="center_vertical"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/adet"
        android:layout_width="50dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/siparisyemekfiyati"
        android:gravity="center_vertical"
        android:textSize="14sp" />

</RelativeLayout>
