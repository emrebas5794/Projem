<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/futbol"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="Sizde Soru Yazın Yazdığınız Soru Yayınlansın."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editsoru"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/soruback"
        android:ems="10"
        android:gravity="center"
        android:hint="Sadece Sorunuzu Yazınız"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/soruyugonder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="#1f1f1f"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:singleLine="true"
        android:text="Soruyu Gönder"
        android:textColor="@color/beyaz"
        android:textColorHint="@color/beyaz" />

</LinearLayout>
